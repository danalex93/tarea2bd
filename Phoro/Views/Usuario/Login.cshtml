@model Phoro.Models.Usuario

@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="content jumbotron">
    <div class="page-header">
        <h1>Iniciar sesión</h1>
    </div>
    @if (ViewBag.Error != "")
    {
        <p class="bg-warning">@ViewBag.Error</p>
        ViewBag.Error = "";
    }
    <form role="form" method="post">
        <div class="form-group">
            <label for="user">Usuario</label>
            <input type="text" class="form-control" name="user" id="user" placeholder="Enter your username" maxlength="20">
        </div>
        <div class="form-group">
            <label for="pass">Contraseña:</label>
            <input type="password" class="form-control" name="pass" id="pass" placeholder="Enter your password" maxlength="20">
        </div>
        <button type="submit" value="Login" class="btn btn-success">Aceptar</button>
    </form>
</div>
