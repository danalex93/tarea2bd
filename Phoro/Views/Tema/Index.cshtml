@model IEnumerable<Phoro.Models.Tema>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Usuario.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mensaje)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publico)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mensaje)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publico)
        </td>
        <td>
            @if (ViewBag.show_edit) {
                @Html.ActionLink("Edit", "Edit", new { id=item.id_tema })
            }
            @if (ViewBag.show_details) {
                @Html.ActionLink("Details", "Details", new { id=item.id_tema })
            }
            @if (ViewBag.show_delete) {
                @Html.ActionLink("Delete", "Delete", new { id=item.id_tema })
            }
        </td>
    </tr>
}

</table>
